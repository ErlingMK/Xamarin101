<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:testApp="clr-namespace:TestApp;assembly=TestApp"
             x:Class="TestApp.MainPage"
             x:DataType="{x:Type testApp:IMainPageViewModel}">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36" />
        </Frame>
        <Label Text="{Binding SomeText}"
               FontSize="Title"
               Padding="30,10,30,10" />

        <Entry Placeholder="Skriv inn her"
               Text="{Binding Input}" />

        <Button Text="Logg inn"
                Command="{Binding LoginCommand}"></Button>
    </StackLayout>

</ContentPage>